<h2>List Of Platforms</h2>
<div class="container" id= "">
  <div class="row row-cols-sm-1 row-cols-md-3 row-cols-lg-5 ">
  {% for platform in platforms %}
    <div class="col">
      <div class="card text-center-white bg-dark mb-3" style="width: 12rem">
        <img src="{{ platform.cover }}" class="img-thumbnail" alt="" />
        <div class="card-body">
          <li>
            <a href="platforms/{{ platform.slug }}" class="btn btn-danger btn-sm">{{ platform.name }}</a>
          </li>
        </div>
      </div>
    </div>
  {% endfor %} 
  </div>
</div>
  {% endblock %}
