{% extends "layout.njk" %} {% block content %}

<div class="container">
<h2>List Of Games</h2>
</div>
{% for game in games %}
<div class="container" >
  <div class="card w-50" id="list-game-card">
    <div class="card-body">
      <img src="{{ game.cover }}" alt="" />
      <a href="games/{{ game.slug }}">{{ game.name }}</a>
    </div>
  </div>
</div>
{% endfor %} {% endblock %}

